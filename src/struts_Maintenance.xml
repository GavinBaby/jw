<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 指定全局国际化资源文件base名 -->
	<constant name="struts.custom.i18n.resources" value="messageResource">
	</constant>
	<!-- 指定国际化编码所使用的字符集 -->
	<constant name="struts.i18n.encoding" value="GBK"></constant>
	<constant name="struts.objectFactory.spring.autoWire.alwaysRespect" value="true" /> 
	<include file="struts-default.xml"></include>
	
	<package namespace="/web/maintenance" name="maintenanceajax" extends="strutsjson">
				
		<action name="*_*_ajax" class="com.jw.baseframe.action.maintenance.{1}Action"
			method="{2}">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		
		<action name="*_*_grid" class="com.jw.baseframe.action.maintenance.{1}Action"
			method="{2}">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="root">
					result
				</param>
			</result>
		</action>
		
		<action name="*_*_treegrid" class="com.jw.baseframe.action.maintenance.{1}Action"
			method="{2}">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="root">
					list{1}{2}
				</param>
			</result>
		</action>
	</package>
	
	
	<package namespace="/web/maintenance" name="maintenance" extends="strutsaction">
		
		<action name="*_*" class="com.jw.baseframe.action.maintenance.{1}Action"
			method="{2}">
			<result name="success">/web/maintenance/{1}{2}.jsp</result>
			<result name="successadmin">/web/maintenance/AdminUserdetailsLoad.jsp</result>
		</action>
	</package>

</struts>